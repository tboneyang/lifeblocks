<h1>Tom's Block Stack</h1>

<%= link_to 'Home', controller: 'blocks' %>

<%= link_to 'New Block', new_block_path %>

<!--display all blocks-->
<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>

<% @blocks.each do |block| %>
	<tr>
		<td><%= block.title %></td>
		<td><%= block.text %></td>
		<td><%= link_to 'Show', block_path(block) %></td>
		<td><%= link_to 'Edit', edit_block_path(block) %></td>
		<td><%= link_to 'Delete', block_path(block), method: :delete, data: { confirm: 'You sure Bro?'} %></td>
	<tr>
<% end %>
</table>
